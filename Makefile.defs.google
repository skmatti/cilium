GOLANG_VERSION := 1.20.8

GOLANG_IMAGE := docker.io/library/golang:$(GOLANG_VERSION)
GOLANG_TARBALL := https://go.dev/dl/go$(GOLANG_VERSION).linux-amd64.tar.gz

HUBBLE_CLI_IMAGE := gcr.io/gke-release-staging/cilium/hubble-cli:v0.12.0-gke.4

.PHONY: install-go
install-go:
	rm -rf /usr/local/go
	curl -fsSL $(GOLANG_TARBALL) | tar -C /usr/local -xzf -
